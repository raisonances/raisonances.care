  gem "jekyll-feed", "~> 0.6"
  gem "jekyll-sitemap"
  gem "jekyll-assets"
  gem "jekyll-seo-tag"
  gem "jekyll-bootstrap-sass"
  gem "jekyll-last-modified-at"
end

